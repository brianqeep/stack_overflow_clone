<h1>Ask a Question</h1>

<% if @question.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_for @question do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :question %>
    <%= f.text_field :question %>
    <%= f.submit  %>
  <% end %>
